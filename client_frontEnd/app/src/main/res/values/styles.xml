<resources>

    <!-- BaseActivity application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/QuickSandTextViews</item>
        <item name="android:editTextStyle">@style/QuickSandEditTexts</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="QuickSandTextViews" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_light</item>
    </style>

    <style name="QuickSandEditTexts" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/quicksand_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
