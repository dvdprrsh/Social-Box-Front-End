<resources>

    <!-- BaseActivity application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textViewStyle">@style/QuickSandTextViews</item>
        <item name="android:editTextStyle">@style/QuickSandEditTexts</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/gradient</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="RatingBar" parent="android:Widget.Material.Light.RatingBar.Indicator">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="RatingMini" parent="android:Widget.Material.Light.RatingBar.Small">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="QuickSandTextViews" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_light</item>
    </style>

    <style name="QuickSandEditTexts" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/quicksand_light</item>
    </style>

    <style name="QuickSandTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="QuickSandChronometer" parent="">
        <item name="android:fontFamily">@font/quicksand_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
